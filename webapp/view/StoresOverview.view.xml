<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	controllerName="pavel.zhukouski.controller.StoresOverview">

	<f:DynamicPage showFooter="true" class="sapUiNoContentPadding">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>storesList}"/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="{i18n>storesList}"/>
					</Breadcrumbs>
				</f:breadcrumbs>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<SearchField
					id="storesSearch"
					search="onStoresSearchBtnPress"
					value="{appView>/currStoresSearchFilter}"
					placeholder="{i18n>search}"
					maxLength="100"
					showRefreshButton="true"/>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<List id="storesList" items="{odataClientMode>/Stores}">
				<ObjectListItem
					press="onStorePress"
					type="Active"
					title="{odataClientMode>Name}"
					number="{= ${odataClientMode>FloorArea} ? ${odataClientMode>FloorArea} : '-' }"
					numberUnit="{i18n>squareUnit}">
						<ObjectAttribute
							text="{= ${odataClientMode>Address} ? ${odataClientMode>Address} : 'Address is not specified' }"/>
				</ObjectListItem>
			</List>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://add"
					type="Ghost"
					text="{i18n>create}"
					press="onCreateStoreBtnPress"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>

</mvc:View>