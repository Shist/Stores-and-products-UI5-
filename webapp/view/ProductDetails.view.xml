<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
	controllerName="pavel.zhukouski.controller.ProductDetails">

	<f:DynamicPage>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{
						parts: [
							'i18n>productDetailsPrName',
							'odata>Name'
						],
						formatter: 'formatMessage'
					}"/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="{i18n>storesList}" press="onStoresListLinkPress"/>
						<Link text="{i18n>storeDetails}" press="onStoreDetailsLinkPress"/>
						<Link text="{i18n>productDetails}"/>
					</Breadcrumbs>
				</f:breadcrumbs>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
					<content>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" labelFor="textPrice" text="{
								parts: [
									'i18n>label',
									'i18n>price'
								],
								formatter: 'formatMessage'
							}"/>
							<Text id="textPrice" text="{odata>Price}"/>
						</HBox>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" labelFor="textRating" text="{
								parts: [
									'i18n>label',
									'i18n>rating'
								],
								formatter: 'formatMessage'
							}"/>
							<Text id="textRating" text="{odata>Rating}"/>
						</HBox>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" labelFor="textSpecs" text="{
								parts: [
									'i18n>label',
									'i18n>specs'
								],
								formatter: 'formatMessage'
							}"/>
							<Text id="textSpecs" text="{odata>Specs}"/>
						</HBox>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" labelFor="textSupplierInfo" text="{
								parts: [
									'i18n>label',
									'i18n>supplierInfo'
								],
								formatter: 'formatMessage'
							}"/>
							<Text id="textSupplierInfo" text="{odata>SupplierInfo}"/>
						</HBox>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" labelFor="textProdCompany" text="{
								parts: [
									'i18n>label',
									'i18n>prodCompany'
								],
								formatter: 'formatMessage'
							}"/>
							<Text id="textProdCompany" text="{odata>ProductionCompanyName}"/>
						</HBox>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" labelFor="textCountry" text="{
								parts: [
									'i18n>label',
									'i18n>countryOfOrigin'
								],
								formatter: 'formatMessage'
							}"/>
							<Text id="textCountry" text="{odata>MadeIn}"/>
						</HBox>
						<HBox alignItems="Start">
							<Label design="Bold" class="sapUiTinyMarginEnd" text="{
								parts: [
									'i18n>label',
									'i18n>status'
								],
								formatter: 'formatMessage'
							}"/>
							<tnt:InfoLabel text="{odata>Status}" colorScheme="{
								path: 'odata>Status',
								formatter: '.formatBadgeType'
							}"/>
						</HBox>
					</content>
				</Panel>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
				<content>
					<VBox>
						<HBox>
							<HBox alignItems="Center" class="sapUiTinyMarginEnd">
								<Label class="sapUiTinyMarginEnd" labelFor="authorInput" text="{
									parts: [
										'i18n>label',
										'i18n>authorName'
									],
									formatter: 'formatMessage'
								}"/>
								<Input id="authorInput" placeholder="Enter name"/>
							</HBox>
							<HBox alignItems="Center">
								<Label class="sapUiTinyMarginEnd" text="{
									parts: [
										'i18n>label',
										'i18n>rating'
									],
									formatter: 'formatMessage'
								}"/>
								<RatingIndicator maxValue="5"/>
							</HBox>
						</HBox>
						<FeedInput post="" class="sapUiSmallMarginTopBottom" />
						<List
						 	id="commentsList"
							showSeparators="Inner"
							items="{odata>/ProductComments}" >
							<FeedListItem
								sender="{odata>Author}"
								text="{odata>Message}"
								info="{
									parts: [
										'i18n>ratingValue',
										'odata>Rating'
									],
									formatter: 'formatMessage'
								}"
								timestamp="{
									parts: [
										'i18n>postedDate',
										{
											path: 'odata>Posted',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												pattern: 'MMM d, yyyy, hh:mm:ss a'
											}
										}
									],
									formatter: 'formatMessage'
								}"
							/>
						</List>
					</VBox>
				</content>
			</Panel>
		</f:content>
	</f:DynamicPage>

</mvc:View>