{
  "_version": "1.9.0",
  "sap.app": {
    "id": "pavel.zhukouski",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "dataSources": {
      "mainService": {
        "uri": "http://localhost:3000/odata/",
        "type": "OData",
        "settings": {
          "odataVersion": "2.0"
        }
      },
      "appViewData": {
        "uri": "model/appViewModel.json",
        "type": "JSON"
      }
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    },
    "supportedThemes": ["sap_belize"]
  },
  "sap.ui5": {
    "rootView": "pavel.zhukouski.view.App",
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "viewPath": "pavel.zhukouski.view",
        "controlId": "RootApp",
        "controlAggregation": "pages",
        "bypassed": {
          "target": ["notFound"]
        },
        "async": true
      },
      "routes": [
        {
          "pattern": "",
          "name": "StoresOverview",
          "target": ["storesOverview"]
        },
        {
          "pattern": "storeDetails/{storeId}",
          "name": "StoreDetails",
          "target": ["storeDetails"]
        },
        {
          "pattern": "storeDetails/{storeId}/productDetails/{productId}",
          "name": "ProductDetails",
          "target": ["productDetails"]
        }
      ],
      "targets": {
        "storesOverview": {
          "viewName": "StoresOverview",
          "viewId": "storesOverview",
          "viewLevel": 1
        },
        "storeDetails": {
          "viewName": "StoreDetails",
          "viewId": "storeDetails",
          "viewLevel": 2
        },
        "productDetails": {
          "viewName": "ProductDetails",
          "viewId": "productDetails",
          "viewLevel": 3
        },
        "notFound": {
          "viewName": "NotFound",
          "viewId": "notFound"
        }
      }
    },
    "dependencies": {
      "minUI5Version": "1.54.0",
      "libs": {
        "sap.m": {}
      }
    },
    "models": {
      "odata": {
        "dataSource": "mainService",
        "settings": {
          "defaultBindingMode": "TwoWay",
          "defaultCountMode": "InlineRepeat",
          "defaultOperationMode": "Client",
          "useBatch": false
        }
      },
      "appView": {
        "type": "sap.ui.model.json.JSONModel",
        "dataSource": "appViewData"
      },
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "pavel.zhukouski.i18n.i18n",
          "bundleLocale": "en"
        }
      }
    }
  }
}
